<?xml version="1.0" encoding="utf-8"?>
<window>
	<defaultcontrol always="true">2</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<include condition="!Skin.HasSetting(setup-0.1.3)">AutoConfig</include>
	<animation type="WindowOpen" reversible="false" condition="!Window.Previous(settings)">
		<effect type="zoom" start="150" end="100" center="960,540" time="240" tween="cubic" />
		<effect type="fade" end="100" time="240" />
	</animation>
	<animation type="WindowClose" reversible="false" condition="!Window.Next(settings)">
		<effect type="fade" start="100" end="0" time="240" />
		<effect type="zoom" start="100" end="130" center="960,540" time="240" tween="cubic" easing="in" />
	</animation>
	<controls>
		<control type="group">
			<include>CommonSettingsBackground</include>
			<include>CommonMediaPlayingBackground</include>
		</control>
		<control type="image">
			<posy>0</posy>
			<width>1920</width>
			<height>1080</height>
			<texture>common/bgcolor.png</texture>
			<animation effect="fade" start="100" end="80" time="40" condition="true">Conditional</animation>
			<animation effect="fade" end="100" time="440" delay="160">VisibleChange</animation>
			<visible>Skin.HasSetting(darkinfopane)</visible>
		</control>
		<control type="group">
			<animation effect="zoom" end="91" center="960,360" time="320" tween="cubic" easing="inout" condition="true">Conditional</animation>
			<visible>![Window.isVisible(ProfileSettings) | Window.IsVisible(LockSettings)]</visible>
			<include>Furniture_SettingsBackPanel</include>
			<include>Furniture_SettingsInternalBackPanel2</include>
			<control type="list" id="2">
				<posx>65</posx>
				<posy>195</posy>
				<width>323</width>
				<height>567</height>
				<onleft>9001</onleft>
				<onright>9001</onright>
				<onup>2</onup>
				<ondown>2</ondown>
				<scrolltime>300</scrolltime>
				<itemlayout height="74" width="323">
					<control type="label">
						<posx>30</posx>
						<width>306</width>
						<height>74</height>
						<label>$INFO[ListItem.Label]</label>
						<font>Font_Bold34</font>
					</control>
				</itemlayout>
				<focusedlayout height="74" width="3230">
					<control type="image">
						<width>323</width>
						<height>74</height>
						<texture border="3">button-focus2.png</texture>
						<animation effect="fade" start="100" end="50" time="40" condition="!Control.HasFocus(2)">Conditional</animation>
						<colordiffuse>$VAR[PanelColorVar]</colordiffuse>
					</control>
					<control type="label">
						<posx>30</posx>
						<width>306</width>
						<height>74</height>
						<label>$INFO[ListItem.Label]</label>
						<font>Font_Bold34</font>
					</control>
				</focusedlayout>
			</control>
			<control type="grouplist" id="9001">
				<posx>390</posx>
				<posy>195</posy>
				<width>1462</width>
				<height>722</height>
				<itemgap>-1</itemgap>
				<pagecontrol>60</pagecontrol>
				<onleft>2</onleft>
				<onright>60</onright>
				<onup>9001</onup>
				<ondown>9001</ondown>
				<control type="radiobutton" id="4">
					<label>20096</label>
					<include>Default_SettingRadioButton</include>
				</control>
				<control type="button" id="5">
					<label>33084</label>
					<label2>$INFO[System.ProfileAutoLogin]</label2>
					<include>Default_SettingRadioButton</include>
					<enable>!Window.IsVisible(ProfileSettings) + !System.HasLoginScreen</enable>
				</control>
			</control>
			<control type="label">
				<posx>358</posx>
				<posy>120</posy>
				<width>1491</width>
				<align>center</align>
				<label>$LOCALIZE[10034]</label>
				<font>Font_ShowcaseMainLabel2</font>
				<textcolor>$VAR[FontColorVar]</textcolor>
			</control>
		</control>
		<control type="group">
			<include>Animation_HideBreadCrumbs</include>
			<include>Breadcrumbs_BackBar</include>
			<include>BreadcrumbsContent</include>
			<include>Breadcrumbs_Furniture</include>
		</control>
		<include>Furniture_NowPlayingWidget</include>
	</controls>
</window>
